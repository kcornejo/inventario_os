{% extends 'SonataAdminBundle:CRUD:base_edit.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('assets/global/vendor/summernote/summernote.css')}}">
{% endblock %}
{% block sonata_admin_content %}
    <div class="row">
        <div class="col-md-7">
            {{ parent() }}
        </div>
        <div class="col-md-5">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title">
                        Comodines
                    </h4>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{render (controller('WebposSoporteBundle:Default:listadoComodin'))}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/global/vendor/summernote/summernote.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/velscript.js') }}" type="text/javascript"></script>
{% endblock %}